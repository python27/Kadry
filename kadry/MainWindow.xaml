<Window x:Class="kadry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kadry"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="#f0f0f0" KeyDown="Window_KeyDown"
        Title="Kadry" Height="450" Width="800">
    
    <Grid>
        <Frame x:Name="MainFrame" Content="" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" NavigationUIVisibility="Hidden" />
        <Image x:Name="LogoImg" Width="100" Height="100" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="5"/>
    </Grid>
</Window>
